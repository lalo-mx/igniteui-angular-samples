{"sampleFiles":[{"hasRelativeAssetsUrls":false,"path":"src/app/expansion-sample-5/expansion-sample-5.component.ts","content":"import { Component, QueryList, ViewChildren } from \"@angular/core\";\nimport { IExpansionPanelEventArgs, IgxExpansionPanelComponent } from \"igniteui-angular\";\n@Component({\n    // tslint:disable-next-line:component-selector\n    selector: \"app-expansion-sample-5\",\n    styleUrls: [\"./expansion-sample-5.component.scss\"],\n    templateUrl: \"./expansion-sample-5.component.html\"\n})\nexport class ExpansionPanelSample5Component {\n\n    @ViewChildren(IgxExpansionPanelComponent)\n    public accordion: QueryList<IgxExpansionPanelComponent>;\n\n    public user = {\n        email: \"\",\n        fullName: \"\",\n        phone: \"\"\n    };\n\n    public billingAddress = {\n        address: \"\",\n        city: \"\",\n        state: \"\",\n        zipCode: \"\"\n    };\n\n    public shippingAddress = {\n        address: \"\",\n        city: \"\",\n        state: \"\",\n        zipCode: \"\"\n    };\n\n    public collapsed(index: number) {\n         if (!this.accordion) {\n            return true;\n         }\n         return this.accordion.toArray()[index] && this.accordion.toArray()[index].collapsed;\n     }\n\n    public onInteraction(event: IExpansionPanelEventArgs) {\n        const expandedPanels = this.accordion.filter((panel) => !panel.collapsed);\n        expandedPanels.forEach((expandedPanel) => {\n            if (expandedPanel.id !==  event.panel.id) {\n                expandedPanel.collapse();\n            }\n        });\n    }\n}\n"},{"hasRelativeAssetsUrls":false,"path":"src/app/expansion-sample-5/expansion-sample-5.component.html","content":"<div class=\"sample-wrapper\">\n    <div class=\"content\">\n        <igx-expansion-panel class=\"content__collapsible\">\n            <igx-expansion-panel-header (onInteraction)=\"onInteraction($event)\" [disabled]=\"false\">\n                <igx-expansion-panel-title class=\"sample-title\">Personal Information</igx-expansion-panel-title>\n                <igx-expansion-panel-icon>\n                    <igx-icon fontSet=\"material\">{{collapsed(0) ? 'expand_more':'expand_less'}}</igx-icon>\n                </igx-expansion-panel-icon>\n            </igx-expansion-panel-header>\n            <igx-expansion-panel-body class=\"body\">\n                <igx-input-group class=\"group\">\n                    <input igxInput name=\"fullName\" type=\"text\" [(ngModel)]=\"user.fullName\"/>\n                    <label igxLabel for=\"fullName\">Full Name</label>\n                    <igx-suffix>\n                        <igx-icon>person</igx-icon>\n                    </igx-suffix>\n                </igx-input-group>\n                <igx-input-group class=\"group\">\n                    <igx-prefix>+359</igx-prefix>\n                    <label igxLabel for=\"phone\">Phone</label>\n                    <input igxInput name=\"phone\" type=\"text\" [(ngModel)]=\"user.phone\" />\n                    <igx-suffix>\n                        <igx-icon>phone</igx-icon>\n                    </igx-suffix>\n                    <igx-hint position=\"start\">Ex.: +359 555 123 456</igx-hint>\n                </igx-input-group>\n                <igx-input-group class=\"group\">\n                    <label igxLabel for=\"email\">Email address</label>\n                    <input igxInput name=\"email\" type=\"email\" [(ngModel)]=\"user.email\"/>\n                    <igx-suffix>\n                        <igx-icon>email</igx-icon>\n                    </igx-suffix>\n                </igx-input-group>\n            </igx-expansion-panel-body>\n        </igx-expansion-panel>\n\n        <igx-expansion-panel class=\"content__collapsible\">\n            <igx-expansion-panel-header (onInteraction)=\"onInteraction($event)\" [disabled]=\"false\">\n                <igx-expansion-panel-title class=\"sample-title\">Billing Address</igx-expansion-panel-title>\n                <igx-expansion-panel-icon>\n                    <igx-icon fontSet=\"material\">{{collapsed(1) ? 'expand_more':'expand_less'}}</igx-icon>\n                </igx-expansion-panel-icon>\n            </igx-expansion-panel-header>\n            <igx-expansion-panel-body class=\"body\">\n                <igx-input-group class=\"group\">\n                    <input igxInput name=\"address\" type=\"text\" [(ngModel)]=\"shippingAddress.address\"/>\n                    <label igxLabel for=\"address\">Billing Address:</label>\n                    <igx-suffix>\n                        <igx-icon>add_location</igx-icon>\n                    </igx-suffix>\n                </igx-input-group>\n                <igx-input-group class=\"group\">\n                    <label igxLabel for=\"city\">City:</label>\n                    <input igxInput name=\"city\" type=\"text\" [(ngModel)]=\"shippingAddress.city\"/>\n                    <igx-suffix>\n                        <igx-icon>location_city</igx-icon>\n                    </igx-suffix>\n                </igx-input-group>\n                <igx-input-group class=\"group\">\n                    <label igxLabel for=\"state\">State:</label>\n                    <input igxInput name=\"state\" type=\"text\" [(ngModel)]=\"shippingAddress.state\"/>\n                    <igx-suffix>\n                        <igx-icon>terrain</igx-icon>\n                    </igx-suffix>\n                </igx-input-group>\n                <igx-input-group class=\"group\">\n                    <label igxLabel for=\"zipCode\">Zip Code:</label>\n                    <input igxInput name=\"zipCode\" type=\"text\" [(ngModel)]=\"shippingAddress.zipCode\">\n                    <igx-suffix>\n                        <igx-icon>mail_outline</igx-icon>\n                    </igx-suffix>\n                </igx-input-group>\n            </igx-expansion-panel-body>\n        </igx-expansion-panel>\n\n        <igx-expansion-panel class=\"content__collapsible\">\n            <igx-expansion-panel-header (onInteraction)=\"onInteraction($event)\" [disabled]=\"false\">\n                <igx-expansion-panel-title class=\"sample-title\">Shipping Address</igx-expansion-panel-title>\n                <igx-expansion-panel-icon>\n                    <igx-icon fontSet=\"material\">{{collapsed(2) ? 'expand_more':'expand_less'}}</igx-icon>\n                </igx-expansion-panel-icon>\n            </igx-expansion-panel-header>\n            <igx-expansion-panel-body class=\"body\">\n                <igx-input-group class=\"group\">\n                    <input igxInput name=\"address\" type=\"text\" [(ngModel)]=\"billingAddress.address\"/>\n                    <label igxLabel for=\"address\">Shipping Address:</label>\n                    <igx-suffix>\n                        <igx-icon>add_location</igx-icon>\n                    </igx-suffix>\n                </igx-input-group>\n                <igx-input-group class=\"group\">\n                    <label igxLabel for=\"city\">City:</label>\n                    <input igxInput name=\"city\" type=\"text\" [(ngModel)]=\"billingAddress.city\"/>\n                    <igx-suffix>\n                        <igx-icon>location_city</igx-icon>\n                    </igx-suffix>\n                </igx-input-group>\n                <igx-input-group class=\"group\">\n                    <label igxLabel for=\"state\">State:</label>\n                    <input igxInput name=\"state\" type=\"text\" [(ngModel)]=\"billingAddress.state\"/>\n                    <igx-suffix>\n                        <igx-icon>terrain</igx-icon>\n                    </igx-suffix>\n                </igx-input-group>\n                <igx-input-group class=\"group\">\n                    <label igxLabel for=\"zipCode\">Zip Code:</label>\n                    <input igxInput name=\"zipCode\" type=\"text\" [(ngModel)]=\"billingAddress.zipCode\">\n                    <igx-suffix>\n                        <igx-icon>mail_outline</igx-icon>\n                    </igx-suffix>\n                </igx-input-group>\n            </igx-expansion-panel-body>\n        </igx-expansion-panel>\n    </div>\n</div>\n"},{"hasRelativeAssetsUrls":false,"path":"src/app/expansion-sample-5/expansion-sample-5.component.scss","content":".sample-wrapper {\n    width: 420px;\n}\n\n.content {\n    width: 100%;\n}\n\n.content__collapsible {\n    width: 100%;\n    border: 1px solid hsl(0, 0%, 82%);\n    border-radius: .3em;\n    box-shadow: 0 1px 2px hsl(0, 0%, 82%);\n}\n\n.body {\n    padding: 0em 1em;\n}\n\n.group {\n    padding: 0em 0em 1em 0px;\n}\n.sample-title {\n    font-weight: 900;\n}\n"},{"hasRelativeAssetsUrls":false,"path":"src/app/app.module.ts","content":"import { NgModule } from \"@angular/core\";\nimport { FormsModule } from \"@angular/forms\";\nimport { BrowserModule } from \"@angular/platform-browser\";\nimport { BrowserAnimationsModule } from \"@angular/platform-browser/animations\";\nimport { AppComponent } from \"./app.component\";\r\nimport { \r\n\tIgxIconModule,\r\n\tIgxExpansionPanelModule,\r\n\tIgxInputGroupModule\r\n } from \"igniteui-angular\";\r\nimport { ExpansionPanelSample5Component } from \"./expansion-sample-5/expansion-sample-5.component\";\n\n@NgModule({\n  bootstrap: [AppComponent],\n  declarations: [\n    AppComponent,\r\n\t\tExpansionPanelSample5Component\n  ],\n  imports: [\n    BrowserModule,\n    BrowserAnimationsModule,\n    FormsModule,\r\n\t\tIgxIconModule,\r\n\t\tIgxExpansionPanelModule,\r\n\t\tIgxInputGroupModule\n  ],\n  providers: [],\n  entryComponents: []\n})\nexport class AppModule {}\n"},{"hasRelativeAssetsUrls":false,"path":"src/app/app.component.html","content":"<app-expansion-sample-5></app-expansion-sample-5>"}],"sampleDependencies":"{\"@angular/animations\":\"7.1.1\",\"@angular/common\":\"7.1.1\",\"@angular/compiler\":\"7.1.1\",\"@angular/core\":\"7.1.1\",\"@angular/forms\":\"7.1.1\",\"@angular/http\":\"7.1.1\",\"@angular/platform-browser\":\"7.1.1\",\"@angular/platform-browser-dynamic\":\"7.1.1\",\"@angular/router\":\"7.1.1\",\"@types/hammerjs\":\"^2.0.35\",\"classlist.js\":\"^1.1.20150312\",\"core-js\":\"^2.4.1\",\"hammerjs\":\"^2.0.8\",\"igniteui-angular\":\"7.1.0\",\"immediate\":\"^3.2.3\",\"intl\":\"^1.2.5\",\"jszip\":\"^3.1.5\",\"rxjs\":\"^6.3.3\",\"tslib\":\"^1.9.0\",\"web-animations-js\":\"^2.3.1\",\"zone.js\":\"^0.8.26\"}"}